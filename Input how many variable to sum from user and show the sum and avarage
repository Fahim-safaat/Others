#include<stdio.h>
int main()
{
    int i,n,sum = 0, a[1000];
    printf("Enter how many variable you want to add: \n");
    scanf("%d",&n);
    printf("Enter the values : \n");
    for(i=0;i<n;i++){
        scanf("%d",&a[i]);
    }

    for(i=0;i<n;i++){
        sum = sum + a[i];
    }
    printf("The sum is : %d\n",sum);
    printf("The avrg is : %.2f\n",(float)sum/n);


    return 0;
}

